<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <!-- ===============================
         テーマ用リソース（ライト／ダークで中身を差し替える）
         =============================== -->
    <Window.Resources>
        <!-- アクセントカラー（ボタンなど） -->
        <SolidColorBrush x:Key="AccentBrush" Color="#4FC3F7" />
        <!-- 背景（RootGrid の色） -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF" />
        <!-- カードの背景（右側の白カードなど） -->
        <SolidColorBrush x:Key="CardBrush" Color="#FDFDFD" />
        <!-- メイン文字色 -->
        <SolidColorBrush x:Key="MainTextBrush" Color="#222222" />
        <!-- サブ文字色 -->
        <SolidColorBrush x:Key="SubTextBrush" Color="#777777" />

        <!-- カード用の影 -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="18"
                          ShadowDepth="4"
                          Opacity="0.35" />

        <!-- 共通ボタンスタイル -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 小さめの Chip ボタン -->
        <Style x:Key="ChipButton" TargetType="Button"
               BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
    </Window.Resources>

    <!-- ===============================
         本体レイアウト
         =============================== -->
    <!-- 背景：テーマブラシ＋うっすら円 -->
    <Grid x:Name="RootGrid" Background="{DynamicResource BackgroundBrush}">
        <!-- 背景の半透明円（ライト／ダークどちらでもそれっぽく見えるよう白系の固定色） -->
        <Ellipse Width="280" Height="280"
                 Fill="#22FFFFFF"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="-80,-60,0,0"/>
        <Ellipse Width="340" Height="340"
                 Fill="#11FFFFFF"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Margin="0,0,-100,-80"/>

        <!-- メインレイアウト -->
        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <!-- 左パネル -->
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <!-- 右コンテンツ -->
            </Grid.ColumnDefinitions>

            <!-- ================= 左：場所選択パネル ================= -->
            <Border Grid.Column="0"
                    Background="#1FFFFFFF" 
                CornerRadius="20"
                    Padding="16"
                    Effect="{StaticResource CardShadow}">
                <DockPanel LastChildFill="True">
                    <!-- ロゴ -->
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Text="TenkiApp"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MainTextBrush}"/>
                        <TextBlock Text="日本各地の天気をチェック"
                                   FontSize="12"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="0,2,0,10"/>
                    </StackPanel>

                    <!-- 入力エリア -->
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Text="都市名で検索"
                                   Foreground="{DynamicResource MainTextBrush}"
                                   FontSize="13"
                                   Margin="0,4,0,2"/>
                        <DockPanel>
                            <TextBox x:Name="CityTextBox"
                                     Text="伊勢崎市"
                                     Height="28"
                                     FontSize="13"
                                     Padding="6,2"
                                     Margin="0,0,4,0"/>
                            <Button Content="検索"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="SearchButton_Click"/>
                            <Button Content="現在地"
                                    Style="{StaticResource ChipButton}"
                                    Click="CurrentLocationButton_Click"
                                    Margin="4,0,0,0"/>
                        </DockPanel>

                        <TextBlock Text="よく使う場所"
                                   Foreground="{DynamicResource MainTextBrush}"
                                   FontSize="13"
                                   Margin="0,10,0,2"/>

                        <WrapPanel>
                            <Button Content="東京" Tag="東京"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="大阪" Tag="大阪市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="札幌" Tag="札幌市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="福岡" Tag="福岡市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="那覇" Tag="那覇市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="前橋" Tag="前橋市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                            <Button Content="伊勢崎" Tag="伊勢崎市"
                                    Style="{StaticResource ChipButton}"
                                    Click="QuickCity_Click"/>
                        </WrapPanel>
                    </StackPanel>

                    <!-- 地図＆ステータス -->
                    <StackPanel Margin="0,12,0,0">
                        <Border CornerRadius="16"
                                Background="#14FFFFFF"
                                Padding="8"
                                Height="180">
                            <Grid>
                                <!-- 日本地図画像 -->
                                <Image Source="Images/japan_map.png"
                                       Stretch="Uniform"
                                       Opacity="0.9"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="日本地図"
                                           Foreground="#66FFFFFF"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           FontWeight="Bold"/>
                            </Grid>
                        </Border>

                        <TextBlock x:Name="StatusText"
                                   Foreground="{DynamicResource MainTextBrush}"
                                   FontSize="11"
                                   Margin="2,8,0,0"
                                   Text="準備完了"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- ================= 右：メインコンテンツ ================= -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ヘッダー（場所＋時刻＋テーマボタン） -->
                <DockPanel Grid.Row="0">
                    <!-- 左：場所 -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Left">
                        <TextBlock x:Name="LocationText"
                                   Text="--"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MainTextBrush}"/>
                        <TextBlock x:Name="TimezoneText"
                                   Text=""
                                   FontSize="12"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   Margin="8,6,0,0"/>
                    </StackPanel>

                    <!-- 右：時刻＋テーマボタン -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right">
                        <TextBlock x:Name="TimeText"
                                   FontSize="13"
                                   Foreground="{DynamicResource SubTextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <Button x:Name="ThemeButton"
                                Content="ダークテーマ"
                                Style="{StaticResource PrimaryButton}"
                                Click="ThemeButton_Click"/>
                    </StackPanel>
                </DockPanel>

                <!-- 中央：現在の天気カード -->
                <Border Grid.Row="1"
                        Margin="0,16,0,10"
                        Background="{DynamicResource CardBrush}"
                        CornerRadius="22"
                        Padding="22"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左：テキスト情報 -->
                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="CurrentConditionText"
                                       Text="--"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MainTextBrush}"/>
                            <TextBlock x:Name="CurrentTempText"
                                       Text="-- ℃"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource MainTextBrush}"
                                       Margin="0,4,0,0"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">
                                <TextBlock Text="観測時刻: "
                                           FontSize="12"
                                           Foreground="{DynamicResource SubTextBrush}"/>
                                <TextBlock x:Name="CurrentTimeDetailText"
                                           FontSize="12"
                                           Foreground="{DynamicResource MainTextBrush}"/>
                            </StackPanel>
                            <TextBlock x:Name="CurrentCodeText"
                                       FontSize="11"
                                       Foreground="{DynamicResource SubTextBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- 右：アイコン＆ミニ情報 -->
                        <StackPanel Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Margin="0,0,4,0">
                            <TextBlock x:Name="CurrentIconText"
                                       Text="☀"
                                       FontSize="64"
                                       HorizontalAlignment="Right"
                                       Margin="0,0,0,4"/>
                            <Border Background="#112196F3"
                                    CornerRadius="14"
                                    Padding="8,4"
                                    HorizontalAlignment="Right">
                                <TextBlock x:Name="SummaryText"
                                           Text="Open-Meteo"
                                           FontSize="11"
                                           Foreground="#FF2196F3"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 下：時間ごとの予報カード -->
                <Border Grid.Row="2"
                        Background="#0FFFFFFF"
                        CornerRadius="18"
                        Padding="12"
                        Margin="0,0,0,4"
                        Effect="{StaticResource CardShadow}">
                    <StackPanel>
                        <TextBlock Text="今日の時間別予報"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MainTextBrush}"
                                   Margin="4,0,0,6"/>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="HourlyList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4"
                                                Padding="10"
                                                Background="{DynamicResource CardBrush}"
                                                CornerRadius="14">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource SubTextBrush}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="{Binding Icon}"
                                                           FontSize="22"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,2,0,2"/>
                                                <TextBlock Text="{Binding Temperature}"
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource MainTextBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
